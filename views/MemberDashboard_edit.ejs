        <div class="create_box">
            
            <% if (msg) { %>
            <div class="alert alert-success" role="alert">
                <%= msg %>
              </div>
            <% } %>

            <form action="/member-dashboard/update-doctor/" method="POST" >
            
                <input type="text" id="fname" name="doctorId" value="<%= doctorId %>" hidden autofocus required>
            
                <label for="fname">Name</label>
                <input type="text" id="fname" name="name" value="<%= data.name %>" autofocus required>

                <label for="lname">Gender</label>
